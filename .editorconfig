# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,rst,ini}]
indent_style = space
indent_size = 4

[*.py]
# https://github.com/timothycrosley/isort/wiki/isort-Settings
line_length=79
known_first_party=pola
multi_line_output=3
default_section=THIRDPARTY

[*.yml]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.html]
indent_style = space
indent_size = 4

[*.js]
trim_trailing_whitespace = false
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
